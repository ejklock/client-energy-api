{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*.ts"
  ]
}